<div class="product-layout-default">
  <div class="product-thumb">  
    <div class="image">
      {% if product.special %}
          <div class="product-label product-label-special">{{ text_sale }} </div>
          <div class="product-label product-label-discount">{{ product.discount }} </div>
      {% endif %}
      <a class="product-image" href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
      <div class="group-action">  
        <button class="btn btn-cart" type="button" onclick="cart.add('{{ product.product_id }}');" title="{{ button_wishlist }}">
            <i class="fa fa-shopping-cart"></i>
            <span>{{ button_cart }}</span>
        </button>                   
        <button class="btn btn-wishlist" type="button" data-toggle="tooltip" data-placement="left" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart-o"></i></button>

        <button class="btn btn-compare" type="button" data-toggle="tooltip" data-placement="left" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-retweet"></i></button>
      </div>
    </div>
    <div class="product-meta">
      <div class="caption">
        <h4 class="name"><a href="{{ product.href }}">{{ product.name }}</a></h4>

        {% if product.rating %}
        <div class="rating"> {% for i in 1..5 %}
          {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>{% endif %}
          {% endfor %} 
        </div>
        {% endif %}  


        {% if product.price %}
          <div class="price">
            {% if not product.special %}
            {{ product.price }}
            {% else %}
            <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
            {% endif %}
          </div>
          {% endif %}
          <div class="description">{{ product.description }}</div> 

          {% if settings.countdown == "true" %}
            <div class="product-timing-deal countdown-timer" data-countdown="1" data-start="{{ product.date_start }}" data-end="{{ product.date_end }}" data-format="{{ date_format_simple_day_hour }}">        
              <div class="date-format">
                <div class="format-date format-date-days">
                  <span class="time-group"><span class="timer">%D</span> <br/> <span class="unit">{{ text_days }}</span></span> 
                  <span class="time-group"><span class="timer">%H</span> <br/> <span class="unit">{{ text_hours }} </span></span>
                  <span class="time-group"><span class="timer">%M</span> <br/> <span class="unit">{{ text_min }}</span></span>
                  <span class="time-group"><span class="timer">%S</span> <br/> <span class="unit">{{ text_sec }}</span></span>
                </div>
              </div>
            </div>
            {% endif %}
        
        
      </div>
    </div> 
  </div>
</div>  
 
{% set id=random(100)~product.product_id %}

<div class="product-layout-slide">
   {% if product.special %}
   <div class="product-label product-label-special">{{ text_sale }}</div>
   <div class="product-label product-label-discount">{{ product.discount }} </div>
   {% endif %}
   <div class="product-thumb">
      {% if product.images %}
      <div class="product-image-slide">
          <div class="pavo-carousel-play carousel slide" id="product-carousel{{id}}">
            <div class="carousel-inner">
                {% for k, image in product.images %}
                <div class="item {% if k == 0 %}active {% endif %}"><img src="{{image}}"></div>
                {% endfor %}
            </div>
            <!-- Add Arrows -->
            <div class="carousel-controls-v1">
                <a class="carousel-control left" href="#product-carousel{{id}}" data-slide="prev"><i class="fa fa-angle-left" aria-hidden="true"></i>
</a>
                <a class="carousel-control right" href="#product-carousel{{id}}" data-slide="next"><i class="fa fa-angle-right" aria-hidden="true"></i>
</a>
            </div>  
        </div>

        <div class="group-action"> 
         
          <button class="btn btn-cart" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">
            <i class="fa fa-shopping-cart"></i> <span>{{ button_cart }}</span></button>

          <button  class="btn btn-wishlist" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart-o"></i></button>

          <button class="btn btn-compare" type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="fa fa-retweet"></i></button>
          
      </div>
    </div>
    {% else %}
    <div class="image">
      <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>
      <div class="group-action"> 
         
          <button class="btn btn-cart" type="button" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">
            <i class="fal fa-shopping-cart"></i> 
            <span> {{ button_cart }} </span>
          </button>

          <button  class="btn btn-wishlist" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fal fa-heart"></i></button>

          <button class="btn btn-compare" type="button" data-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="far fa-repeat-alt"></i></button>
          
      </div>
    </div>
 
  {% endif %}


  <div class="product-meta">
    <div class="caption">
        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
         
        {% if product.rating %}
          <div class="rating"> {% for i in 1..5 %}
              {% if product.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>{% endif %}
          {% endfor %} </div>
          {% endif %}

        {% if product.price %}
        <p class="price"> {% if not product.special %}
          {{ product.price }}
          {% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
          {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} </p>
          {% endif %}

          <div class="description">{{ product.description }}</div>

          {% if settings.countdown == "true" %}
            <div class="product-timing-deal countdown-timer" data-countdown="1" data-start="{{ product.date_start }}" data-end="{{ product.date_end }}" data-format="{{ date_format_simple_day_hour }}">        
              <div class="date-format">
                <div class="format-date format-date-days">
                  <span class="time-group"><span class="timer">%D</span> <br/> <span class="unit">{{ text_days }}</span></span> 
                  <span class="time-group"><span class="timer">%H</span> <br/> <span class="unit">{{ text_hours }} </span></span>
                  <span class="time-group"><span class="timer">%M</span> <br/> <span class="unit">{{ text_min }}</span></span>
                  <span class="time-group"><span class="timer">%S</span> <br/> <span class="unit">{{ text_sec }}</span></span>
                </div>
              </div>
            </div>
            {% endif %}
      </div>
  </div>

</div> 

</div>  